<UserControl
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    mc:Ignorable="d"
    x:Class="Inferyn.Pages.MainPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:Inferyn.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  MAIN GRID  -->
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--  PANEL GRID  -->
        <Grid Grid.Column="0" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Rectangle
                Fill="{StaticResource PrimaryBackground}"
                Grid.Row="0"
                Grid.RowSpan="2"
                Opacity="{StaticResource GlobalOpacity}" />
            <Button
                Background="{StaticResource PrimaryAccent}"
                Click="CreateChatButton_OnClick"
                Content="Create"
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Margin="20"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Center"
                x:Name="CreateChatButton" />
            <!--  CHAT HISTORY STACK PANEL  -->
            <ScrollViewer Grid.Row="1" Margin="10">
                <StackPanel
                    HorizontalAlignment="Stretch"
                    Margin="10"
                    Spacing="10"
                    VerticalAlignment="Stretch"
                    x:Name="HistoryStackPanel" />
            </ScrollViewer>
        </Grid>
        <!--  CHAT GRID  -->
        <Grid Grid.Column="1" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Rectangle
                Fill="{StaticResource SecondaryBackground}"
                Grid.Row="0"
                Grid.RowSpan="3"
                Opacity="{StaticResource GlobalOpacity}" />
            <!--  MODEL OPTIONS STACK PANEL  -->
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                Margin="20"
                Orientation="Horizontal"
                Spacing="10"
                VerticalAlignment="Stretch">
                <TextBox
                    HorizontalContentAlignment="Left"
                    Text="127.0.0.1"
                    VerticalContentAlignment="Center"
                    Width="200"
                    x:Name="AddressTextBox" />
                <TextBox
                    HorizontalContentAlignment="Left"
                    Text="11434"
                    VerticalContentAlignment="Center"
                    Width="75"
                    x:Name="PortTextBox" />
                <!--  MODEL SELECTION  -->
                <TextBox
                    HorizontalContentAlignment="Left"
                    Text="gemma3:1b"
                    VerticalContentAlignment="Center"
                    Width="200"
                    x:Name="ModelTextBox" />
            </StackPanel>
            <!--  MESSAGES  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="10"
                x:Name="MessageScrollViewer">
                <StackPanel
                    Margin="20"
                    Spacing="20"
                    x:Name="MessagesStackPanel" />
            </ScrollViewer>
            <!--  MESSAGE INPUT  -->
            <Grid Grid.Row="2" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <controls:ChatInputBox
                    Grid.Column="1"
                    MaxHeight="300"
                    SendRequested="ChatInputBox_OnSendRequested" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
